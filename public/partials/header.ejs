<script>
  /* global axios,toastr,$ */
  let baseURL = 'http://45.79.26.219/vnode'
  axios.defaults.baseURL = baseURL
  $(document).ready(() =>  $('.lockScreen').hide() )

  function logout() {
    axios.post('/logout').then(function (response) {
      window.location.href = '/'
    })
      .catch(function (error) {
        console.log(error)
        toastr['error']('Error al actualizar registros')
      })
  }

  $(document).ready(function () {    
    <% if (!locals.noHeader) { %>
      axios.get('/itemList').then(function (response) {
        var parsedUrl = new URL(window.location.href)

        Object.keys(response.data).forEach(header => {
          let html = ""
          if(response.data[header].length === 1) html = $(`<li class="nav-item"><a class="nav-link ${parsedUrl.pathname === response.data[header][0].url ? `active` : ''}" href="${baseURL + '/' +  response.data[header][0].url}">${response.data[header][0].name}</a></li>`)
          else {
            html += `
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" id="navbar_${header}" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                ${header}
              </a>
              <div class="dropdown-menu" aria-labelledby="navbar_${header}">`

            response.data[header].forEach(item => {
              html += `<a class="dropdown-item" href="${window.location.origin + item.url}">${item.name}</a>`               
            })

            html += `</div></li>`
            html = $(html)
          }
          html.each((i, e) => {
            $('#navbarAdd')[0].append(e)
          })
        })

        let logoutBtn = $(`<li class="nav-item">
    <a class="nav-link " href="#"  data-ajax="false" onclick="logout()">Cerrar Sesi√≥n</a>
    </li>`)
        logoutBtn.each((i, e) => {
          $('#navbarAdd')[0].append(e)
        })
      })
        .catch(function (error) {
          console.log(error)
          toastr['error']('Error al actualizar paginas')
        })
      <% } %> // eslint-disable-line
  })

</script>
